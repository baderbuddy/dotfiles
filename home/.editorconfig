# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_size = 4
charset = utf-8
indent_style = space

[*.{go}]
indent_style = tab

[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = false
insert_final_newline = true
max_line_length = 100


[*.{pug,yaml,json,yml}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = false
insert_final_newline = true
